<MudPaper Elevation="0" MaxWidth="100%" Class="pa-4">
    <MudText Typo="Typo.h5" GutterBottom="true">Tags</MudText>
    <MudAutocomplete T="string"
                     Variant="Variant.Outlined"
                     @bind-Text="_searchString"
                     @bind-Value="_tagName"
                     ResetValueOnEmptyText="true"
                     SelectValueOnTab="true"
                     CoerceValue="true"
                     Placeholder="Add a tag..."
                     Clearable="true"
                     SearchFunc="SearchTag"
                     Adornment="Adornment.Start"
                     AdornmentIcon="@Icons.Material.Filled.Tag"
                     OnKeyDown="AddTag"/>
    <MudPaper Width="100%" Class="d-inline-block pa-2">
        @foreach (var tag in _tags)
        {
            <MudChip T="string"
                     Color="Color.Default"
                     Variant="Variant.Outlined"
                     Value="@tag"
                     OnClose="DeleteTag"/>
            
        }
    </MudPaper>
</MudPaper>