@using XForms.Data
<MudDropContainer
    T="Question"
    Items="@Template.Questions.OrderBy(q => q.Order)"
    ItemDropped="@ReorderQuestions"
    ItemsSelector="@((_, _) => true)"
    @ref="_dragDropContainer">
    <ChildContent>
        <MudPaper Class="pa-2">
            <MudText Typo="Typo.h5" Class="ma-4">Questions</MudText>
            <MudDropZone T="Question" AllowReorder="true" Class="flex flex-wrap"/>
        </MudPaper>
    </ChildContent>
    <ItemRenderer>
        <QuestionBody Question="@context" QuestionDeleted="@DeleteQuestion"/>
    </ItemRenderer>
</MudDropContainer>
<MudButton
    Variant="Variant.Filled"
    Color="Color.Surface"
    OnClick="CreateQuestion"
    StartIcon="@Icons.Material.Filled.Add"
    IconSize="Size.Large"
    FullWidth="true"
    Class="mt-4"/>
